{
	"input": {
		"styles": {
			"default": {
				"align-items": "flex-start",
				"display": "flex",
				"flex-direction": "column",
				"gap": "var(--global-spacing-1)"
			}
		}
	},
	"input-input": {
		"styles": {
			"default": {
				"border-block-start-width": "var(--global-border-width-1)",
				"border-block-end-width": "var(--global-border-width-1)",
				"border-inline-start-width": "var(--global-border-width-1)",
				"border-inline-end-width": "var(--global-border-width-1)",
				"border-block-start-style": "var(--global-border-style-1)",
				"border-block-end-style": "var(--global-border-style-1)",
				"border-inline-start-style": "var(--global-border-style-1)",
				"border-inline-end-style": "var(--global-border-style-1)",
				"border-block-start-color": "var(--form-border-color)",
				"border-block-end-color": "var(--form-border-color)",
				"border-inline-start-color": "var(--form-border-color)",
				"border-inline-end-color": "var(--form-border-color)",
				"border-radius": "var(--border-radius)",
				"padding-block-end": "var(--global-spacing-4)",
				"padding-block-start": "var(--global-spacing-4)",
				"padding-inline-end": "var(--global-spacing-2)",
				"padding-inline-start": "var(--global-spacing-2)"
			}
		}
	},
	"input-radio": {
		"styles": {
			"default": {
				"flex-direction": "row",
				"align-items": "center",
				"components": {
					"input": {
						"margin-block-end": "var(--global-spacing-5)"
					}
				}
			}
		}
	},
	"input-checked": {
		"styles": {
			"default": {
				"appearance": "none",
				"-webkit-appearance": "none",
				"-moz-appearance": "none",
				"width": "16px",
				"height": "16px",
				"border": "5px solid var(--global-blue-5)",
				"border-radius": "50%",
				"cursor": "pointer",
				"position": "relative",
				"outline": "none",
				"box-sizing": "border-box",
				"padding": 0,
				"border-color": "var(--global-blue-5)"
			}
		}
	},
	"input-small-input": {
		"styles": {
			"default": {
				"padding-block-end": "var(--global-spacing-2)",
				"padding-block-start": "var(--global-spacing-2)",
				"padding-inline-end": "var(--global-spacing-2)",
				"padding-inline-start": "var(--global-spacing-2)"
			}
		}
	},
	"input-input-focus": {
		"styles": {
			"default": {
				"outline": "solid 2px var(--form-border-color)",
				"outline-offset": "1px"
			}
		}
	},
	"input-label": {
		"styles": {
			"default": {
				"font-weight": "var(--global-font-weight-7)"
			}
		}
	},
	"input-tip": {
		"styles": {
			"default": {
				"font-size": "var(--global-font-size-3)"
			}
		}
	},
	"input-error-input": {
		"styles": {
			"default": {
				"border-color": "var(--status-color-danger)"
			}
		}
	},
	"input-error-input-focus": {
		"styles": {
			"default": {
				"outline-color": "var(--status-color-danger)"
			}
		}
	},
	"input-success-input": {
		"styles": {
			"default": {
				"border-color": "var(--status-color-success)"
			}
		}
	},
	"input-success-input-focus": {
		"styles": {
			"default": {
				"outline-color": "var(--status-color-success)"
			}
		}
	},
	"input-warning-input": {
		"styles": {
			"default": {
				"border-color": "var(--status-color-warning)"
			}
		}
	},
	"input-warning-input-focus": {
		"styles": {
			"default": {
				"outline-color": "var(--status-color-warning)"
			}
		}
	}
}
